include ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead   
					tr  
						th 类名
						th 录入时间
						th 电影数目
						th 查看
						th 删除
				tbody
					each item in categories
						tr(class="item-id-#{item._id}")
							td #{item.name}
							td #{moment(item.meta.createAt).format('MM/DD/YYYY')}
							td #{item.movies.length}
							td
								a(href="result?cat._id=#{item._id}")
							td
								button.btn.btn-danger.Categorydel(type='button',data-id='#{item._id}') 删除
	script(src="/js/admin.js")